{
  "baseUrl": ".",
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "outDir": "./lib"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
